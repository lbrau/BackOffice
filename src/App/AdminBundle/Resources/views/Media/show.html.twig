{% extends 'AppAdminBundle:Layout:admin_layout.html.twig' %}

{% block body -%}
<section class="panel">
   <div class="panel-body">
       <a href="#" class="task-thumb">
           <img src="" alt="">
       </a>
       <div class="task-thumb-details">
           <h1><a href="#">{{ entity.libelle }}</a></h1>
           <p>Ici seront affichés l'image cropée</p>
       </div>
       <div class="align-right">

          <div class="btn btn-xs btn-danger margin-top">
               <a href="{{ path('media') }}" class="white-color align-btn">
                   Back to the list
               </a>
           </div>
           <br>
           <div class="btn btn-xs btn-danger margin-top">
               <a href="{{ path('media_edit', { 'id': entity.id }) }}" class="white-color align-btn">
                   Edit
               </a>
           </div>
           <br>
          <div class="btn btn-xs btn-danger margin-top">{{ form(delete_form) }}</div>
       </div>
   </div>
       
   <table class="table table-hover personal-task">
       <tbody>
         <tr>
             <td>
                 <i class=" fa fa-tasks"></i>
             </td>
             <td>Identifiant</td>
             <td>{{ entity.id }}</td>
         </tr>
         <tr>
             <td>
                 <i class="fa fa-exclamation-triangle"></i>
             </td>
             <td>type</td>
             <td>{{ entity.type }}</td>
         </tr>
         <tr>
             <td>
                 <i class="fa fa-envelope"></i>
             </td>
             <td>Libellé</td>
             <td>{{ entity.libelle }}</td>
         </tr>
         <tr>
             <td>
                 <i class=" fa fa-bell-o"></i>
             </td>
             <td>Date de création</td>
             <td>{{ entity.dateCreation|date('Y-m-d H:i:s') }}</td>
         </tr>
         <tr>
             <td>
                 <i class=" fa fa-bell-o"></i>
             </td>
             <td>Date de modification</td>
             <td>{{ entity.dateModification|date('Y-m-d H:i:s') }}</td>
         </tr>
         <tr>
             <td>
                 <i class=" fa fa-bell-o"></i>
             </td>
             <td>Path</td>
             <td>{{ entity.path }}</td></td>
         </tr>
       </tbody>
   </table>
</section>

{% endblock %}
